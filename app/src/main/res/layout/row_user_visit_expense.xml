<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_2"
    android:layout_marginRight="@dimen/margin_2"
    android:layout_marginTop="@dimen/margin_2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cell_row_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin_8"
        android:paddingTop="@dimen/margin_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_10">

                <TextView
                    android:id="@+id/txtCompanyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COMPANY NAME"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_size_14" />

                <TextView
                    android:id="@+id/txtContactPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Person"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/txt_size_12" />

                <TextView
                    android:id="@+id/txtPurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Purpose"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/txt_size_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/borderred"
                    android:paddingBottom="@dimen/margin_2"
                    android:paddingLeft="@dimen/margin_3"
                    android:paddingRight="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_2"
                    android:text="1000 TAKA"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/txt_size_10" />

                <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingBottom="@dimen/margin_2"
                    android:paddingLeft="@dimen/margin_3"
                    android:paddingRight="@dimen/margin_3"
                    android:paddingTop="@dimen/margin_2"
                    android:text="2018-05-04 05:14:19"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/txt_size_9" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
